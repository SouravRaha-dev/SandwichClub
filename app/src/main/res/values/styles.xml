<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/First</item>
        <item name="colorPrimaryDark">@color/Second</item>
        <item name="colorAccent">@color/Third</item>
    </style>

    <style name="label_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/WhiteFont</item>
    </style>

    <style name="desc_label_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/WhiteFont</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="desc_content_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/GreyFont</item>
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
